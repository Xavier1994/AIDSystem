<%- model_class = Message -%>
<div class="page-header">
  <h1>我的邮件</h1>
</div>

<div class="bg-success">
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:标题) %>:</strong></dt>
  <dd><%= @message.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:内容) %>:</strong></dt>
  <dd class="mce-container-body"><%= @message.content.html_safe %></dd>
  <dt><strong><%= model_class.human_attribute_name(:收件人) %>:</strong></dt>
  <dd><%= @message.tousername %></dd>
</dl>
</div>

<%= link_to '返回',
              messages_path, :class => 'btn btn-default'  %>
<%= link_to '删除',
              message_path(@message),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '确定要删除?')) },
              :class => 'btn btn-danger' %>
